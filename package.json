{
  "name": "open-pocket-backend-server",
  "version": "1.0.0",
  "description": "Backend server for open pocket",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/src/app.js",
    "test": "vitest",
    "db:init": "docker run -d --name postgresql --env-file .env -p 5432:5432 -v pgdata:/bitnami/postgresql bitnami/postgresql:latest",
    "db:start": "docker start postgresql",
    "db:stop": "docker stop postgresql",
    "db:shell": "dotenv -- sh -c 'docker exec -it postgresql psql postgresql://$POSTGRESQL_USERNAME:$POSTGRESQL_PASSWORD@localhost:5432/$POSTGRESQL_DATABASE' ",
    "db:purge": "npm run db:stop && docker rm -f postgresql && docker volume rm pgdata && docker image rm bitnami/postgresql:latest",
    "drizzle:apply": "NODE_OPTIONS='--import tsx' npx drizzle-kit generate && npx drizzle-kit migrate"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "bcrypt": "^6.0.0",
    "drizzle-orm": "^0.44.4",
    "fastify": "^5.5.0",
    "http-status-codes": "^2.3.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "fastify-tsconfig": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "private": true,
  "keywords": [
    "open-pocket",
    "pocket",
    "read-it-later",
    "bookmark-manager",
    "bookmark"
  ],
  "homepage": "https://github.com/abdulrahim2002/open-pocket-backend-server#readme",
  "bugs": {
    "url": "https://github.com/abdulrahim2002/open-pocket-backend-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abdulrahim2002/open-pocket-backend-server.git"
  },
  "license": "MIT",
  "author": "",
  "type": "module"
}
